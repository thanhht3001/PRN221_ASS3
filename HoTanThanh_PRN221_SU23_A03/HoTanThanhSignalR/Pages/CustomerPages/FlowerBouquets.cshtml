@page
@model HoTanThanhSignalR.Pages.CustomerPages.FlowerBouquetsModel
@{
    ViewData["Title"] = "Flower Bouquets";
    Layout = "_CustomerLayout";
}

<h1>Flower Bouquet List</h1>

<div class="row">
    <div class="col-md-10">
        <form method="post" class="row">
            <div class="form-group col-md-6" style="display: inline-block">
                <label class="control-label">Search by flower bouquet name:</label>
                <input class="form-control" asp-for="SearchString" />
            </div>
            <div class="form-group col-md-6" style="display: inline-block; margin-top: 30px">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                Flower Bouquet Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FlowerBouquet[0].Description)
            </th>
            <th>
                Unit Price
            </th>
            <th>
                Units In Stock
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FlowerBouquet[0].Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FlowerBouquet[0].Supplier)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.FlowerBouquet)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FlowerBouquetName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnitPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnitsInStock)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.CategoryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Supplier.SupplierName)
                </td>
                <td>
                    <a asp-page="./Cart" asp-page-handler="buynow" asp-route-id="@item.FlowerBouquetId">Add To Cart</a>
                </td>
            </tr>
        }
    </tbody>
</table>
