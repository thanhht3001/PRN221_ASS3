@page
@model HoTanThanhSignalR.Pages.Orders.ReportModel
@{
    ViewData["Title"] = "Order Report";
}
<div class="row">
    <div class="col-md-12">
        <form method="post" class="row col-md-12" >
            <div class="form-group col-md-4" style="display: inline-block">
                <label class="control-label">Start Date (dd/MM/yyyy):</label>
                <input class="form-control" asp-for="StartDate" />
            </div>
            <div class="form-group col-md-4" style="display: inline-block">
                <label class="control-label">End Date (dd/MM/yyyy):</label>
                <input class="form-control" asp-for="EndDate" />
            </div>
            <div class="form-group col-md-4" style="display: inline-block; margin-top: 30px">
                <input type="submit" value="Report" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div class="row">
<h2 class="col-md-6" style="display: inline-block; margin-top: 30px">Numbers: @Model.Number</h2>
<h2 class="col-md-6" style="display: inline-block; margin-top: 30px; align-items:end">Total: $@Model.Total</h2>
</div>
<h1 style="margin-top:30px">Order List</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                Order Date
            </th>
            <th>
                Shipped Date
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].Total)
            </th>
            <th>
                Status
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].Customer)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Order)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShippedDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Total)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderStatus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Customer.CustomerName)
                </td>
            </tr>
        }
    </tbody>
</table>
